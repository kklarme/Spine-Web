{
  "name": "@spine-web/backend",
  "version": "1.0.0",
  "main": "bundle/index.js",
  "scripts": {
    "pretranspile": "rimraf dist",
    "transpile": "nest build",
    "prebundle": "rimraf bundle",
    "bundle": "esbuild dist/main.js --bundle --platform=node --minify --keep-names --target=node14 --outfile=bundle/index.js",
    "build": "npm run transpile && npm run bundle",
    "prewatch": "rimraf dist",
    "start:dev": "tsc-watch --onSuccess \"node dist/index.js\"",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src"
  },
  "dependencies": {
    "fastify": "^3.27.4",
    "fastify-cors": "^6.0.3",
    "fastify-http-proxy": "^6.2.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "esbuild": "^0.14.28",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.6.2",
    "typescript": "^4.6.2"
  },
  "author": "m-ripper",
  "prettier": "../.prettierrc.js"
}
